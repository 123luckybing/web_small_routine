/**index.wxss**/
/*图片轮播*/
.swiper {
  height: 200px;
}

.huandeng image {
  width: 100%;
  height: 100%;
}

/*分类*/
.index-nav {
  background-color: #fff;
  margin: 10px 0;
}

.index-nav view {
  flex: 1;
  flex-direction: column;
}

.index-nav view:nth-child(2n) {
  margin: 0 10px;
}
.index-nav image {
  width: 50px;
  height: 50px;
}

.index-nav text {
  font-size: 12px;
}

.index-nav .nav {
  display: inline-block;
  margin-top: 10px;
}

.nav1 {
  width: 250rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}

.a1,
.a2 {
  position: relative;
}

.a1 image{
  width: 750rpx;
  height: 400rpx;
}

.a1 view,
.a2 view {
  background: rgba(0,0,0,.5);
  border-radius: .5px 2px .5px .5px;
  color: #fff;
  font-size: 16px;
  padding: 5px 5px;
  position: absolute;
  right: 0;
  bottom: 12rpx;
}