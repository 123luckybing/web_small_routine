/*图片轮播*/
.swiper {
  height: 200px;
}

.huandeng image {
  width: 100%;
  height: 100%;
}

/*分类*/
.index-nav {
  background-color: #fff;
  margin: 10px 0;
}

.index-nav view:nth-child(2n) {
  margin: 0 10px;
}
.index-nav image {
  width: 50px;
  height: 50px;
}

.index-nav text {
  font-size: 12px;
}

.index-nav .nav {
  display: inline-block;
  margin-top: 10px;
}

.nav1 {
  width: 250rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}

