.item {
    padding: 12px 6px;
    border-bottom: 1px solid #dbdbdb;
    position: relative;
}

.img {
    display: inline-block;
    vertical-align: middle;
}

.img image {
    width: 100px;
    height: 100px;
}

.detail {
    display: inline-block;
    vertical-align: middle;
    margin-left: 20px;
}

.name {
    font-size: 14px;
    display: block;
}

.price {
    color: #eb5211;
    font-size: 16px;
    display: block;
}

.tip {
    font-size: 12px;
    color: #999;
    display: flex;
    width: 175px;
    justify-content: space-between;
}

